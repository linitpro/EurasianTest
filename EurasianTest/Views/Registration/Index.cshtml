
@{
    // РЕГИСТРАЦИЯ
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UnauthorizedLayout.cshtml";
}
@model EurasianTest.Core.Components.OuterRegistrationComponent.Models.OuterRegistrationViewModel

<div class="text-center">
    <form class="form-signin" method="post">
        <img class="mb-4" src="/docs/4.3/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Регистрация</h1>
        <label for="inputEmail" class="sr-only">Email address</label>
        <input asp-for="Email" type="email" id="inputEmail" class="form-control" placeholder="Email" required="" autofocus="">
        <label for="inputPassword" class="sr-only">Password</label>
        <input asp-for="Password" type="password" id="inputPassword" class="form-control" placeholder="Пароль" required="">
        <button type="submit" class="btn btn-success btn-block">Зарегестрироваться</button>
        <hr/>
        <a asp-controller="Authorization" asp-action="Index">Авторизация</a>
            
    </form>
</div>
