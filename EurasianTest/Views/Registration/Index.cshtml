
@{
    // РЕГИСТРАЦИЯ
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UnauthorizedLayout.cshtml";
}
@model EurasianTest.Core.Components.OuterRegistrationComponent.Models.OuterRegistrationViewModel

<div class="text-center">
    <form class="form-signin" method="post">
        <h1 class="h3 mb-3 font-weight-normal">Регистрация</h1>
        <label for="inputEmail" class="sr-only">Email address</label>
        <input asp-for="Email"  id="inputEmail" class="form-control" placeholder="Email" autofocus="">
        <span class="text-danger" asp-validation-for="Email"></span>
        <label for="inputPassword" class="sr-only">Password</label>
        <input asp-for="Password" type="password" id="inputPassword" class="form-control" placeholder="Пароль">
        <span class="text-danger" asp-validation-for="Password"></span>
        <button type="submit" class="btn btn-success btn-block">Зарегестрироваться</button>
        <hr />
        <a asp-controller="Authorization" asp-action="Index">Авторизация</a>

    </form>
</div>
