
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model EurasianTest.Core.Components.GetTasksComponent.Models.GetTasksViewModel
<h1>Задачи</h1>

<div class="container">
    <div class="row">
        <div class="col-md2">
            <a asp-action="Add" class="btn btn-outline-success">Добавить</a>
        </div>
    </div>
</div>
<hr />
<div class="container">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Название</th>
                <th>Ответственный</th>
                <th>Дата начала</th>
                <th>Дата завершения</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Items.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model.Items[i].Name</td>
                    <td>@Model.Items[i].User?.Email</td>
                    <td>@Model.Items[i].Started</td>
                    <td>@Model.Items[i].Expired</td>
                    <td>
                        <a hre asp-action="Details" asp-controller="Tasks" asp-route-id="@Model.Items[i].Id">Детали</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

